<div style="position: relative; padding: 20px; font-family: Arial, sans-serif;">
  <div style="position: absolute; top: 10px; left: 10px; margin:2rem;">
    <a href="<%= books_path %>" style="text-decoration: none; color: #007bff; font-weight: bold;">Books</a> |
    <a href="<%= profile_path %>" style="text-decoration: none; color: #007bff; font-weight: bold;">Profile</a>
  </div>

  <!-- Logout Button at top-right -->
  <div style="position: absolute; top: 10px; right: 10px;">
    <%= button_to "Logout", logout_path, method: :delete, style: "background-color: #dc3545; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer;" %>
  </div>

  <!-- Book Details -->
  <div style="margin-top: 60px; text-align: center;">
    <h1 style="margin-bottom: 20px;"><%= @book.title %></h1>
    <p style="font-size: 16px;"><strong>Author:</strong> <%= @book.author %></p>
    <p style="font-size: 16px;"><strong>ISBN:</strong> <%= @book.isbn %></p>
    
    <% if @book.borrowings.where(returned_at: nil).exists? %>
      <p style="color: red; font-weight: bold;">This book is already borrowed.</p>
    <% else %>
      <%= button_to 'Borrow', borrow_book_path(@book), method: :post, style: "background-color: #007bff; color: white; padding: 8px 12px; border: none; border-radius: 4px; cursor: pointer; font-size: 14px;" %>
    <% end %>
  </div>
</div>

<div style="position: relative; text-align: center; padding: 20px; font-family: Arial, sans-serif;">
  <div style="position: absolute; top: 10px; left: 10px; margin:2rem;">
    <a href="<%= books_path %>" style="text-decoration: none; color: #007bff; font-weight: bold;">Books</a> |
    <a href="<%= profile_path %>" style="text-decoration: none; color: #007bff; font-weight: bold;">Profile</a>
  </div>

  <div style="position: absolute; top: 10px; right: 10px;">
    <%= button_to "Logout", logout_path, method: :delete, style: "background-color: #dc3545; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer;" %>
  </div>

  <h1 style="margin-bottom: 20px;">Available Books</h1>

  <table style="width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 14px;">
    <thead>
      <tr style="background-color: #f2f2f2;">
        <th style="text-align: left; padding: 10px; border: 1px solid #ddd;">Title</th>
        <th style="text-align: left; padding: 10px; border: 1px solid #ddd;">Author</th>
        <th style="text-align: left; padding: 10px; border: 1px solid #ddd;">ISBN</th>
        <th style="text-align: left; padding: 10px; border: 1px solid #ddd;">Availability</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td style="padding: 10px; border: 1px solid #ddd;">
            <strong><%= link_to book.title, book_path(book), style: "color: #007bff; text-decoration: none;" %></strong>
          </td>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= book.author %></td>
          <td style="padding: 10px; border: 1px solid #ddd;"><%= book.isbn %></td>
          <td style="padding: 10px; border: 1px solid #ddd; color: <%= book.available ? 'green' : 'red' %>;">
            <%= book.available ? "Available" : "Not Available" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

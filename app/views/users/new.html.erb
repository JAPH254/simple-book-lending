<div style="text-align: center;">
  <h1>Sign Up</h1>

  <%= form_with model: @user, url: users_path, style: "max-width: 400px; margin: 0 auto;" do |form| %>
    <div style="margin-bottom: 15px;">
      <%= form.label :email_address, style: "font-weight: bold;" %>
      <%= form.email_field :email_address, style: "width: 100%; padding: 8px; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :username, style: "font-weight: bold;" %>
      <%= form.text_field :username, style: "width: 100%; padding: 8px; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :password, style: "font-weight: bold;" %>
      <%= form.password_field :password, style: "width: 100%; padding: 8px; border-radius: 4px;" %>
    </div>

    <div style="margin-top: 20px;">
      <%= form.submit "Sign Up", style: "width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px;" %>
    </div>
  <% end %>

  <div style="margin-top: 15px;">
    <%= link_to "Already have an account? Login here", new_session_path, style: "color: #007bff;" %>
  </div>
</div>

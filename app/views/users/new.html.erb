<div style="text-align: center; font-family: Arial, sans-serif; padding: 20px;">
  <h1 style="margin-bottom: 30px;">Sign Up</h1>

  <!-- Form Container (centered, fixed width) -->
  <div style="max-width: 400px; margin: 0 auto; text-align: left;">
    <%= form_with model: @user, url: users_path do |form| %>
      <!-- Email Field -->
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <%= form.label :email_address, "Email:", style: "width: 100px; margin-right: 10px;" %>
        <%= form.email_field :email_address,
              placeholder: "Enter your email address",
              style: "width: calc(100% - 110px); padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <!-- Username Field -->
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <%= form.label :username, "Username:", style: "width: 100px; margin-right: 10px;" %>
        <%= form.text_field :username,
              placeholder: "Choose a username",
              style: "width: calc(100% - 110px); padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <!-- Password Field -->
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <%= form.label :password, "Password:", style: "width: 100px; margin-right: 10px;" %>
        <%= form.password_field :password,
              placeholder: "Enter your password",
              style: "width: calc(100% - 110px); padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <!-- Submit Button -->
      <div style="text-align: center; margin-top: 20px;">
        <%= form.submit "Sign Up", style: "width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
      </div>
    <% end %>
  </div>

  <!-- Navigation Link for Login -->
  <div style="margin-top: 15px;">
    <%= link_to "Already have an account? Login here", new_session_path, style: "color: #007bff; text-decoration: none; font-weight: bold;" %>
  </div>
</div>
